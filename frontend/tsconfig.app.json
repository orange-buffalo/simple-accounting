{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "exclude": [
    "**/__tests__/*",
    "**/__storybook__/**/*",
    "**/*.stories.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    // override Vue default by changing 2016 to 2017
    "lib": [
      "ES2017",
      "DOM",
      "DOM.Iterable"
    ]
  }
}
